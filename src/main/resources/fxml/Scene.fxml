<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.lab0.es1.FXMLController">
   <left>
      <VBox prefHeight="13.0" prefWidth="166.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Login" textFill="#cc1e1e">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Bodoni MT Black" size="26.0" />
               </font>
            </Label>
            <Label text="Nome" textFill="#e01313">
               <VBox.margin>
                  <Insets left="30.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="idNome" text="Inserisci nome">
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" />
               </VBox.margin>
               <font>
                  <Font name="Bodoni MT" size="12.0" />
               </font>
            </TextField>
            <Label text="Password" textFill="#e21f1f">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="idPassword" prefHeight="69.0" prefWidth="106.0" text="Inserisci password">
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" />
               </VBox.margin>
               <font>
                  <Font name="Bodoni MT" size="12.0" />
               </font>
            </TextField>
            <Button mnemonicParsing="false" onAction="#metodoAccedi" text="ACCEDI">
               <VBox.margin>
                  <Insets bottom="10.0" left="30.0" right="10.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="txtLabel" />
         </children>
      </VBox>
   </left>
</BorderPane>
